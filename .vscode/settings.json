{
    "flutter.hotReloadOnSave": true,
    "flutter.hotRestartOnSave": false,
    "dart.flutterSdkPath": "/opt/homebrew/share/flutter",
    "dart.hotReloadOnSave": "all",
    "dart.hotRestartOnSave": "never",
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "dart.showInspectorNotificationsForWidgetErrors": true,
    "dart.previewFlutterUiGuides": true,
    "dart.previewFlutterUiGuidesCustomTracking": true,
    "dart.closingLabels": true,
    "dart.lineLength": 80,
    "dart.enableSdkFormatter": true,
    "dart.analyzerPath": "/opt/homebrew/share/flutter/bin/cache/dart-sdk/bin/dart",
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "emmet.includeLanguages": {
        "dart": "html"
    },
    "search.exclude": {
        "**/.dart_tool": true,
        "**/build": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true
    },
    "files.exclude": {
        "**/.dart_tool": true,
        "**/build": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true
    }
}